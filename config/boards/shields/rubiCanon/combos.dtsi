/ {
    combos {
        compatible = "zmk,combos";

        combo_esc {
            timeout-ms = <40>;
            key-positions = <0 1>; // Q y W
            bindings = <&kp ESC>;
            layers = <0>;
        };

        combo_tab {
            timeout-ms = <40>;
            key-positions = <10 11>; // A y S
            bindings = <&kp TAB>;
            layers = <0>;
        };

        combo_shift {
            timeout-ms = <40>;
            key-positions = <20 21>; // Z y X
            bindings = <&kp LSFT>;
            layers = <0>;
        };

        combo_bspc {
            timeout-ms = <40>;
            key-positions = <8 9>; // P y +
            bindings = <&kp BSPC>;
            layers = <0 1>;
        };

        combo_enter {
            timeout-ms = <40>;
            key-positions = <18 19>; // L y Ñ
            bindings = <&kp ENTER>;
            layers = <0 1>;
        };

        combo_rshift {
            timeout-ms = <40>;
            key-positions = <28 29>; // . y -
            bindings = <&kp RSFT>;
            layers = <0>;
        };


        combo_del {
            timeout-ms = <40>;
            key-positions = <12 13>; // Q y A
            bindings = <&kp DEL>;
            layers = <0>;
        };

        combo_interrogacion_abre {
            timeout-ms = <40>;
            key-positions = <3 4>; // R y T
            bindings = <&kp LS(EQUAL)>; 
            layers = <0>;
        };

        combo_interrogacion_cierra {
            timeout-ms = <40>;
            key-positions = <5 6>; // Y y U
            bindings = <&kp LS(UNDER)>; 
            layers = <0>;
        };

        combo_acento {
            timeout-ms = <50>;
            key-positions = <17 18>; // L y Ñ
            bindings = <&kp APOSTROPHE>;
            layers = <0>;
        };
        combo_llave1 {
            timeout-ms = <40>;
            key-positions = <1 2>; // W y E
            bindings = <&kp RS(COMMA)>;
            layers = <0>;
        };
        combo_llave2 {
            timeout-ms = <40>;
            key-positions = <1 2>; // I y O
            bindings = <&kp RS(DOT)>;
            layers = <0>;
        };
        combo_parentesis_abre {
            timeout-ms = <40>;
            key-positions = <11 12>; // S y D
            bindings = <&kp LS(8)>;
            layers = <0>;
        };
         combo_parentesis_cierra {
            timeout-ms = <40>;
            key-positions = <17 18>; // K y L
            bindings = <&kp LS(9)>;
            layers = <0>;
        };
        left_brace {
            timeout-ms = <40>;
            key-positions = <13 14>; // F y G
            bindings = <&kp RS(SEMI)>;
            layers = <0>;
        };
         right_brace {
            timeout-ms = <40>;
            key-positions = <15 16>; // H y J
            bindings = <&kp RS(APOS)>;
            layers = <0>;
        };
    };
};
